{% extends 'base.html.twig' %}

{% block title %}Edit Route{% endblock %}

{% block body %}
    <h1>Edit Route</h1>
    <form method="post" action="/routes/{{ route.id }}/edit">
        <label>Name: <input name="name" value="{{ route.name }}"></label><br>
        <label>Distance: <input name="distance" value="{{ route.distance }}" type="number" step="0.1"></label><br>
        <button type="submit">Save</button>
    </form>
    <p><a href="/routes/{{ route.id }}">Cancel</a></p>
{% endblock %}
