{% extends 'base.html.twig' %}

{% block title %}Edit Maintenance{% endblock %}

{% block body %}
    <h1>Edit Maintenance</h1>
    <form method="post" action="/maintenances/{{ maintenance.id }}/edit">
        <label>Date: <input name="date" value="{{ maintenance.date }}" type="date"></label><br>
        <label>Cost: <input name="cost" value="{{ maintenance.cost }}" type="number" step="0.01"></label><br>
        <button type="submit">Save</button>
    </form>
    <p><a href="/maintenances/{{ maintenance.id }}">Cancel</a></p>
{% endblock %}
